
<!-- Add Manager Button -->
<button type="button" class="btn btn-primary" id="modalbtn" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add Manager
</button>

<!-- Manager Table -->
<table class="table mt-3">
    <thead>
        <tr>
            <th>Manager ID</th>
            <th>Manager Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="mgrdata">
        <!-- Populated by JS -->
    </tbody>
</table>

<!-- Manager Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Manager Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="mgrform">
                    <div class="form-group mb-3" id="id_div">
                        <label for="ManagerId">Manager ID</label>
                        <input type="text" class="form-control" name="ManagerId" id="ManagerId" placeholder="Enter ID">
                    </div>
                    <div class="form-group mb-3">
                        <label for="Mname">Manager Name</label>
                        <input type="text" class="form-control" name="Mname" id="Mname" placeholder="Enter Name">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closemodal" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="savebtn">Save</button>
                <button type="button" class="btn btn-primary" id="updbtn">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & jQuery -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Manager JS -->
<script src="~/js/manager.js"></script>
